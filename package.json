{
	"private": false,
	"name": "preact-bulma-components",
	"version": "0.2.7",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"description": "Bulma Components for Preact",
	"repository": "https://github.com/strootje/preact-bulma-components",
	"author": "Bas Stroosnijder",
	"license": "MPL-v2",

	"scripts": {
		"pretest": "pnpm run lint",
		"test": "nyc --reporter=text-summary mocha",
		"coverage": "nyc report --reporter=text-lcov | coveralls",

		"prebuild": "rm -rf ./dist && pnpm run lint",
		"build": "tsc -p ./src",
		"watch": "tsc --watch -p ./src",

		"build:storybook": "build-storybook",

		"preserve": "pnpm run test",
		"serve": "start-storybook -p 9008 --ci",

		"lint": "tslint -p ./tsconfig.json",
		"prepack": "npm run build"
	},

	"dependencies": {
		"classnames": "*"
	},

	"peerDependencies": {
		"bulma": "0.*",
		"preact": "8.*"
	},

	"devDependencies": {
		"@babel/core": "^7.4.4",
		"@emotion/core": "^10.0.10",
		"@emotion/styled": "^10.0.10",
		"@fortawesome/fontawesome-free": "^5.8.1",
		"@storybook/addon-actions": "^5.0.11",
		"@storybook/addon-knobs": "^5.0.11",
		"@storybook/addon-notes": "^5.0.11",
		"@storybook/addon-viewport": "^5.0.11",
		"@storybook/channels": "^5.0.11",
		"@storybook/preact": "^5.0.11",
		"@types/chai": "^4.1.7",
		"@types/classnames": "*",
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.13.9",
		"@types/storybook__addon-actions": "^3.4.2",
		"@types/webpack": "^4.4.29",
		"babel-loader": "^8.0.5",
		"babel-preset-preact": "^1.1.0",
		"bulma": "^0.7.4",
		"chai": "^4.2.0",
		"coveralls": "^3.0.3",
		"emotion-theming": "^10.0.10",
		"mocha": "^6.0.2",
		"nyc": "^14.0.0",
		"preact": "8.*",
		"preact-jsx-chai": "^2.2.1",
		"source-map-support": "^0.5.10",
		"ts-loader": "^5.4.5",
		"ts-node": "^8.0.2",
		"tslint": "^5.13.1",
		"tslint-react-a11y": "^1.0.0",
		"typescript": "*",
		"webpack": "^4.30.0"
	}
}
